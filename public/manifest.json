{
  "name": "OpenSVM P2P Exchange",
  "short_name": "OpenSVM P2P",
  "description": "A peer-to-peer cryptocurrency exchange platform for trading across Solana Virtual Machine networks",
  "start_url": "/",
  "display": "standalone",
  "background_color": "#ffffff",
  "theme_color": "#3b82f6",
  "orientation": "portrait-primary",
  "categories": ["finance", "business"],
  "lang": "en",
  "dir": "ltr",
  "scope": "/",
  "prefer_related_applications": false,
  "edge_side_panel": {
    "preferred_width": 400
  },
  "display_override": ["window-controls-overlay", "standalone", "minimal-ui"],
  "icons": [
    {
      "src": "/images/icon-192x192.svg",
      "sizes": "192x192",
      "type": "image/svg+xml",
      "purpose": "maskable any"
    },
    {
      "src": "/images/icon-512x512.svg",
      "sizes": "512x512",
      "type": "image/svg+xml",
      "purpose": "maskable any"
    },
    {
      "src": "/images/icon-192x192.png",
      "sizes": "192x192",
      "type": "image/png",
      "purpose": "any"
    },
    {
      "src": "/images/icon-512x512.png",
      "sizes": "512x512",
      "type": "image/png",
      "purpose": "any"
    }
  ],
  "shortcuts": [
    {
      "name": "Buy Crypto",
      "short_name": "Buy",
      "description": "Browse buy offers",
      "url": "/?tab=buy",
      "icons": [{ "src": "/images/icon-192x192.svg", "sizes": "192x192", "type": "image/svg+xml" }]
    },
    {
      "name": "Sell Crypto",
      "short_name": "Sell",
      "description": "Browse sell offers",
      "url": "/?tab=sell",
      "icons": [{ "src": "/images/icon-192x192.svg", "sizes": "192x192", "type": "image/svg+xml" }]
    },
    {
      "name": "My Profile",
      "short_name": "Profile",
      "description": "View your profile and transaction history",
      "url": "/?tab=profile",
      "icons": [{ "src": "/images/icon-192x192.svg", "sizes": "192x192", "type": "image/svg+xml" }]
    },
    {
      "name": "Create Offer",
      "short_name": "Create",
      "description": "Create a new buy or sell offer",
      "url": "/?tab=create",
      "icons": [{ "src": "/images/icon-192x192.svg", "sizes": "192x192", "type": "image/svg+xml" }]
    }
  ],
  "share_target": {
    "action": "/share",
    "method": "GET",
    "params": {
      "title": "title",
      "text": "text",
      "url": "url"
    }
  },
  "protocol_handlers": [
    {
      "protocol": "web+opensvm",
      "url": "/?action=handle&type=%s"
    }
  ]
}